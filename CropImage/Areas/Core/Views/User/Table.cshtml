@model IEnumerable<CropImage.Models.SysTem.Account>
@{
    Layout = null;
    string CName = ViewBag.CName;
    string CText = ViewBag.CText ?? "Người dùng";
    string CRoute = ViewBag.CRoute;
    ViewBag.Title = CText;
    bool CanDelete = true;
    bool CanEdit = true;
}

<div class="row" id="mainContent">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-flag-o font-green-sharp bold"></i>
                    <span class="caption-subject font-green-sharp bold ">Danh sách @CText</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Thêm mới "+ @CText, "Create", null, new { @class = "btn btn-sm green" })
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-hover table-bordered" id="datatable_none_ajax_source">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            <span>Thao tác</span>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr data-objectid="@item.Id">
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            @*<td>
                                <img src="@Html.DisplayFor(modelItem => item.Uri)" width="100" />
                            </td>*@
                            <td>
                                @if (CanEdit)
                                {
                                    <a href ="@(CRoute+"Edit/"+item.Id)" class="edit btn btn-xs blue"><i class="fa fa-edit"></i> Sửa</a>
                                }

                                @if (CanDelete)
                                {
                                    <a class="delete btn default btn-xs red-flamingo" href="javascript:;">
                                        <i class="fa fa-trash-o"></i> Xóa
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>