</head>
<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner ">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a href="/Core/ImageCropeds/WriteWord">
                    <img src="~/Theme/adminfav.png" alt="logo" class="logo-default">
                </a>
                <div class="menu-toggler sidebar-toggler">
                    <!-- DOC: Remove the above "hide" to enable the sidebar toggler button on header -->
                </div>
            </div>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse"> </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN PAGE ACTIONS -->
            <!-- DOC: Remove "hide" class to enable the page header actions -->
            <div class="page-actions">
                <div class="btn-group">
                    <i class="fa fa-folder"></i>

                    <a href="/Core/CoreHome/Index" class="btn btn-warning">  Khoanh hình   </a>
                     
                    <a href="/Core/Images/Index" class="btn btn-success">  Cập nhật hình ảnh   </a>
                    
                    <a href="/Core/ImageCropeds/Index" class="btn btn-info">   Cập nhật hình đã khoanh   </a>
                </div>
            </div>
            <!-- END PAGE ACTIONS -->
            <!-- BEGIN PAGE TOP -->
            <div class="page-top">
                <!-- BEGIN HEADER SEARCH BOX -->
                <!-- DOC: Apply "search-form-expanded" right after the "search-form" class to have half expanded search box -->
                <form class="search-form" action="page_general_search_2.html" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" placeholder="Search..." name="query">
                        <span class="input-group-btn">
                            <a href="javascript:;" class="btn submit">
                                <i class="icon-magnifier"></i>
                            </a>
                        </span>
                    </div>
                </form>
                <!-- END HEADER SEARCH BOX -->
                <!-- BEGIN TOP NAVIGATION MENU -->
                <div class="top-menu">
                    <ul class="nav navbar-nav pull-right">
                        <li class="separator hide"> </li>

                        <li class="dropdown dropdown-user dropdown-light">
                            @*<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true" id="Login">*@
                            <a href="" class=" " data-toggle=" " data-hover=" " data-close-others=" " id="Login">
                                <span class="username username-hide-on-mobile" id="nameUser" obj="@Name"> @(Name == null ? "Đăng nhập" : Name) </span>
                                <!-- DOC: Do not remove below empty space(&nbsp;) as its purposely used -->
                            </a>

                        </li>
                        <!-- END USER LOGIN DROPDOWN -->
                        <!-- BEGIN QUICK SIDEBAR TOGGLER -->
                        <li class="dropdown dropdown-extended quick-sidebar-toggler">
                            <a href="/Login/Logout">
                                <i class="icon-logout"></i>
                            </a>
                        </li>
                        <!-- END QUICK SIDEBAR TOGGLER -->
                    </ul>
                </div>
                <!-- END TOP NAVIGATION MENU -->
            </div>
            <!-- END PAGE TOP -->
        </div>
        <!-- END HEADER INNER -->
    </div>

    <div class="page-container">
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <!-- BEGIN PAGE HEAD-->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>
                        Công cụ gán nhãn chữ viết tay Việt Nam kiểu viết tự nhiên
                    </h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD-->
            <!-- BEGIN PAGE BREADCRUMB -->
            @*<ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="index.html">Home</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <span class="active">Crop image</span>
                    </li>
                </ul>*@
            @RenderBody()

        </div>
    </div>
    <div>
        <script src="~/Theme/assets/global/plugins/jquery.min.js"></script>
        <script src="~/Theme/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Theme/assets/global/plugins/js.cookie.min.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery.blockui.min.js"></script>
        <script src="~/Theme/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
        <script src="~/Theme/assets/global/scripts/app.min.js"></script>
        <script src="~/Theme/assets/layouts/layout4/scripts/layout.min.js"></script>
        <script src="~/Theme/assets/layouts/layout4/scripts/demo.min.js"></script>
        <script src="~/Theme/assets/layouts/global/scripts/quick-sidebar.min.js"></script>
        <script src="~/Theme/assets/layouts/global/scripts/quick-nav.min.js"></script>

        <script src="~/Theme/assets/pages/scripts/ui-blockui.min.js"></script>

        <script src="~/Theme/assets/global/plugins/fancybox/source/jquery.fancybox.pack.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery-file-upload/js/vendor/tmpl.min.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery-file-upload/js/vendor/load-image.min.js"></script>
        <script src="~/Theme/assets/global/plugins/jquery-file-upload/js/vendor/canvas-to-blob.min.js"></script>
    </div>
    @Scripts.Render("~/toast/js")
    @Scripts.Render("~/js/metronic/datatable")
    @Scripts.Render("~/js/metronic/datatable-none-ajax-source")
    @Scripts.Render("~/js/metronic/plupload")
    @*@Scripts.Render("~/bundles/bootstrap")*@
