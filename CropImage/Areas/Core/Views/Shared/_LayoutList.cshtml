        jQuery(document).ready(function () {
            var us ='@(Id== null? "xxx":Id)';//$('#nameUser').attr('obj');
            if ( us!== "xxx") {
                //class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true"
                $("#Login").attr("class", "dropdown-toggle");
                $("#Login").attr("data-toggle", "dropdown");
                $("#Login").attr("data-hover", "dropdown");
                $("#Login").attr("data-close-others", "true");

               // $("#DropUser").addClass("hidden");
            }
            else {
                $("#Login").attr("href", "/Login/Index?returnUrl=/Core/Images/Index");
            }
        });
        
    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("scripts2", required: false)
    <footer>

        <div class="page-footer">
            <div class="page-footer-inner">
                &copy; @DateTime.Now.Year ; Nguyễn Anh Dũng
            </div>
            <div class="scroll-to-top">
                <i class="icon-arrow-up"></i>
            </div>
        </div>
