@model IEnumerable<CropImage.Models.SysTem.Log>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lịch sử toàn bộ hệ thống</h2>
<div class="row" id="mainContent">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-flag-o font-green-sharp bold"></i>
                    <span class="caption-subject font-green-sharp bold ">Lịch sử hệ thống</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Thêm mới hình ảnh", "Create", null, new { @class = "btn btn-sm green" })
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-hover table-bordered" id="datatable_none_ajax_source">
                    <tr >
                        <th>
                            @Html.DisplayNameFor(model => model.AccountId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EntityName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Action)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TimeOccur)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descript)
                        </th> 
                        <th>
                            <span>Thao tác</span>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr data-objectid="@item.Id">
                        <td>
                            @Html.DisplayFor(m => item.AccountId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.EntityName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TimeOccur)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Descript)
                        </td> 
                        <td>
                           <a class="btn default btn-xs blue" href="javascript:;"><i class="fa fa-info-circle"></i> Chi tiết</a>
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>