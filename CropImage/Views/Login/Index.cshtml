
@{
    ViewBag.Title = "Đăng nhập hệ thống";
    string url = ViewBag.returnUrl == null ? "" : ViewBag.returnUrl;
    var forget = "";
    if (ViewBag.Forget != null && ViewBag.Forget == true)
    {
        forget = "true";
    }
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("returnUrl", url);
    <h3 class="form-title">Đăng nhập hệ thống</h3>
    <div class="alert alert-danger @(ViewBag.Error == null || ViewBag.Error == "" ? "display-hide" : "")">
        <button class="close" data-close="alert"></button>
        <span>
            @(ViewBag.Error == null || ViewBag.Error == "" ? "Vui lòng nhập địa chỉ email và mật khẩu!" : ViewBag.Error)
        </span>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Tên đăng nhập</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" placeholder="Tên đăng nhập" name="UserName" id="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" placeholder="Mật khẩu" name="Password" id="Password" />
        </div>
    </div>
    <div class="form-actions">
        <label class="rememberme mt-checkbox mt-checkbox-outline">
            <input type="checkbox" name="remember" value="1" /> Remember me
            <span></span>
        </label>
        <button type="submit" class="btn green pull-right"> Login </button>
    </div>
    <div class="forget-password">
        <h4>Quên mật khẩu?</h4>
        <p>
            Bấm <a href="javascript:;" id="forget-password" onclick="function() { alert('Xin cấp lại đi ahihi'); }">
                vào đây
            </a>
            để khôi phục mật khẩu, hoặc <a href="@Url.Action("Register","Login")">đăng ký tài khoản mới</a>.
        </p>
    </div>
}
