@model CropImage.Models.ViewModels.RegisterModel
@{
    ViewBag.Title = "Đăng ký tài khoản";

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()
    <h3 class="form-title">Đăng ký tài khoản</h3>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="alert alert-danger @(ViewBag.Error == null || ViewBag.Error == "" ? "display-hide" : "")">
        <button class="close" data-close="alert"></button>
        <span>
            @(ViewBag.Error == null || ViewBag.Error == "" ? "Vui lòng nhập địa chỉ email và mật khẩu!" : ViewBag.Error)
        </span>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Họ và tên</label>
        <div class="input-icon">
            <i class="fa fa-font"></i>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control placeholder-no-fix" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Email công ty</label>
        <div class="input-icon">
            <i class="fa fa-envelope"></i>
            @*<input class="form-control placeholder-no-fix" type="text" placeholder="Email" name="email" id="Email" />*@
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Tên đăng nhập</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control placeholder-no-fix" })
        </div>
    </div>
    <div class="form-actions">
        <a id="register-back-btn" type="button" class="btn grey-salsa btn-outline" href="@Url.Action("Index","Login")"> Thoát </a>
        <button type="submit" id="register-submit-btn" class="btn green pull-right"> Đăng ký </button>
    </div>
}
